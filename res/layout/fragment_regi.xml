<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
  <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textview11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Your Character!"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
             

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="250dp"
                android:layout_height="300dp"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:src="@drawable/homer2"
           />
            

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <ImageButton
                    android:id="@+id/malebutton"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:background="#ffffff"
                    android:scaleType="fitXY"
                    android:src="@drawable/male2" />

                <ImageButton
                    android:id="@+id/femalebutton"
                    android:layout_width="match_parent"
                    android:layout_height="78dp"
                    android:adjustViewBounds="true"
                    android:background="#ffffff"
                    android:scaleType="fitXY"
                    android:src="@drawable/female2" />
                </LinearLayout>
                </LinearLayout>
                
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/Weightfront"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Weight : "
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <EditText
                android:id="@+id/weightnum"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:ems="10"
                android:inputType="numberPassword" >
            </EditText>

            <TextView
                android:id="@+id/Weightback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="kg"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/heightfront"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Height : "
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <EditText
                android:id="@+id/heightnum"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="numberPassword" />

            <TextView
                android:id="@+id/heightend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="cm"
                android:textAppearance="?android:attr/textAppearanceMedium" />
        </LinearLayout>
    
        <ImageButton
            android:id="@+id/registerbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/registerbtn" />
</LinearLayout>
</RelativeLayout>
